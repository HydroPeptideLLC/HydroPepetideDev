{% schema %}
{
	"name": "Home hero section",
	"settings": [
		
	],
	"blocks": [
		{
			"type": "gallery_image",
			"name": "Banner Slide",
			"settings": [
				{
                  "type": "image_picker",
                  "id": "background_image",
                  "label": "Background Image"
                },
                {
                  "type": "image_picker",
                  "id": "background_image_mobile",
                  "label": "Background Mobile Image"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title",
                    "default": "Revamp Your Regimen Kit"
                },
                {
                    "type": "textarea",
                    "id": "short_text",
                    "label": "Text",
                    "default": "Give your skincare routine a makeover"
                },
                {
                    "type": "text",
                    "id": "cta",
                    "label": "Button label"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Button link"
                },
				{
                   "type": "select",
                   "id": "banner_content_position",
                   "options": [
                      { "value": "Top", "label": "Top"},
                      { "value": "Center", "label": "Center"},
                      { "value": "Bottom", "label": "Bottom"}
                   ],
                   "label": "Content Position on Mobile",
				   "default":   "Bottom"
                }
			]
		}
	],
	"presets": [
		{
            "category": "Banner",
            "name": "Home Hero banner",
			"blocks": [
				{
					"type": "gallery_image"
				},
				{
					"type": "gallery_image"
				},
				{
					"type": "gallery_image"
				}
			]
		}
	]

}
{% endschema %}
