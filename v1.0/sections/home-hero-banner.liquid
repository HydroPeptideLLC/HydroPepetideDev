<div class="hero_slider_content">
  {% for block in section.blocks %}
  <div class="home_hero_banner lazybg banner_{{ forloop.index }}" data-style="background-image: url({{ block.settings.background_image | img_url: 'master' }})" data-mobstyle="background-image: url({{ block.settings.background_image_mobile | img_url: 'master' }})">
    <div class="container">
      <div class="content ">
        <h1>{{ block.settings.title }}</h1>
        <p>{{ block.settings.short_text }}</p>
        <a href="{{ block.settings.link }}">{{ block.settings.cta }}</a>
      </div>
      <style>
/*         .home_hero_banner.banner_{{ forloop.index }} {
          background-image: url({{ block.settings.background_image | img_url: 'master' }});
        } */
        @media (max-width: 767px) {
/*           .home_hero_banner.banner_{{ forloop.index }} {
            background-image: url({{ block.settings.background_image_mobile | img_url: 'master' }});
          } */
          .home_hero_banner.banner_{{ forloop.index }} {
            {% if block.settings.banner_content_position == 'Bottom' %}
            padding: 322px 0 55px;
            {% elsif block.settings.banner_content_position == 'Center' %}
            padding: 190px 0 190px;
            {% else %}
            padding: 55px 0 322px;
            {% endif %}
          }
        }
      </style>
      
    </div>
  </div>
  {% endfor %}
</div>

